     271 000662 033727  170010  000001  wait2:  bit  @#t1stat,#tmdone      ; check status
     272 000670 001774                          beq  wait2                 ; loop if not done
     273 000672 012737  000000  170010          mov  #tmstop,@#t1cntl      ; stop timer
     274 000700 000207                          rts  pc
